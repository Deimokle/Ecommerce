<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <link rel="stylesheet" type="text/css" href="{{ asset('bundles/app/css/bootstrap.css') }}"/>
        <link rel="stylesheet" type="text/css" href="{{ asset('bundles/app/css/hover.css') }}" media="all" />
        <link rel="stylesheet" type="text/css" href="{{ asset('bundles/app/css/slider.css') }}" />
        <link rel="stylesheet" type="text/css" href="{{ asset('bundles/app/css/animate.css') }}" />
        <link rel="stylesheet" type="text/css" href="{{ asset('bundles/app/css/style.css') }}"/>

    </head>
    <body>
    <!-- Début menu -->
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand hvr-underline-from-left" href={{ path('app_homepage') }}>Accueil</a>
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav navbar-right">
                        <li><a class="hvr-underline-from-left" href={{ path('ecommerce_tableau') }}>Art</a></li>
                        <li><a class="hvr-underline-from-left" href={{ path('ecommerce_bijou') }}>Bijoux KIFA</a></li>
                        <li><a class="hvr-underline-from-left" href={{ path('app_lucieactu') }}>Artiste</a></li>
                        <li><a class="hvr-underline-from-left" href={{ path('ecommerce_panier') }}>Panier {% if paniers!=null %}({{ paniers|length }}){% else %}{% endif %}</a></li>
                        <li><a class="hvr-underline-from-left" href="#">Contact</a></li>
                        {% if langues.nblangs > 1 %}
                            {#<ul class="nav navbar-nav navbar-right">#}
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"> <img class="" height="20" src="{{ asset('uploads/drapeaux/') }}{{ langues.lngFlagActif }}"/> <span class="caret"></span></a>
                                    <ul class="dropdown-menu">
                                        {% for lang in langues.langs %}
                                            {% if langues.lngCodeActif != lang.lngCode %}
                                                {#<li><a href="#">{{ lang.lngLib }} <img class="" height="20" src="{{ asset('uploads/drapeaux/') }}{{ lang.lngFlag }}"/></a></li>#}
                                                <li><a href="{{ path('changt_langue', { 'id': lang.lngCode }) }}"><img class="" width="30" height="20" src="{{ asset('uploads/drapeaux/') }}{{ lang.lngFlag }}"/>&nbsp;{{ lang.lngLib }}</a></li>
                                                {#<li role="separator" class="divider"></li>#}
                                                {#<li><a href="#">Separated link</a></li>#}
                                            {% endif %}
                                        {% endfor %}
                                    </ul>
                                </li>
                            {#</ul>#}
                        {#{% else %}#}
                            {#<li><img class="" height="20" src="{{ asset('uploads/drapeaux/') }}{{ lngFlagActif }}"/></li>#}
                        {% endif %}

                    </ul>
                </div><!-- /.navbar-collapse -->
            </div><!-- /.container-fluid -->
        </nav>
    <!-- Fin menu -->

        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
        <!-- script -->

        <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
        <!-- Include all compiled plugins (below), or include individual files as needed -->
        <script type="text/javascript" src="{{ asset('bundles/app/js/jquery.parallax-1.1.3.js') }}"></script>
        <script src="{{ asset('bundles/app/js/jquery-1.9.1.min.js') }}"></script>

        <script src="{{ asset('bundles/app/js/docs.min.js') }}"></script>
        <script src="{{ asset('bundles/app/js/bootstrap.js') }}"></script>

    <script src="{{ asset('bundles/app/js/bootstrap-confirmation.js') }}"></script>

        <!-- jssor slider scripts-->
        <!-- use jssor.slider.debug.js for debug -->
        <script type="text/javascript" src="{{ asset('bundles/app/js/jssor.slider.mini.js') }}"></script>

        <!--<script src="js/jquery-2.2.3.min.js"></script>-->
        <script src="{{ asset('bundles/app/js/typed.js') }}"></script>
        <!--<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.cycle/3.0.3/jquery.cycle.all.js"></script>-->

        <!-- Animation on scroll -->
        <script src="{{ asset('bundles/app/js/modernizr.custom.js') }}"></script>
        <script src="{{ asset('bundles/app/js/masonry.pkgd.min.js') }}"></script>
        <script src="{{ asset('bundles/app/js/imagesloaded.js') }}"></script>
        <script src="{{ asset('bundles/app/js/classie.js') }}"></script>
        <script src="{{ asset('bundles/app/js/AnimOnScroll.js') }}"></script>
    <footer class="site-footer">
        <p class="text-footer">
            Conditions générale de vente
            <span class="floatright"><a href="#"><img class="footerimg" src="http://vignette1.wikia.nocookie.net/logopedia/images/f/fb/Facebook_icon_2013.svg/revision/latest?cb=20130501121248"></a>
        <a href="#"><img class="footerimg" src="https://5a5a57ff32a328601212-ee0df397c56b146e91fe14be42fa361d.ssl.cf1.rackcdn.com/icon/instagram_logos_app_icon/YyepHGHDvkl1wFkUHw8Y/Instagram-v051916_200.png"></a></span>
        </p>
        <div class="col-md-offset-2 col-md-8 col-sm-offset-2 col-sm-8">
            <form action="{{ path("abonnement") }}" method="post">
                <input type="email" name="email" placeholder="Saisir l'adresse mail" required="required" />
                <input style="display: none;" name="route" value="{{ app.request.attributes.get('_route') }}"/>
                <input type="submit" value="Valider" />
            </form>
        </div>
    </footer>
    </body>
</html>
