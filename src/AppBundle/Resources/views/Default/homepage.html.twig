{% block javascripts %}

    {{ parent() }}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
    <!-- permet de changer tout les champs en required false a true.... -->
    <script>
        $(document).ready(function(){
            $("div.divimgleft").mouseleave(function(){
                $("p.textlefthp").hide();
            });
            $("div.divimgleft").mouseenter(function(){
                $("p.textlefthp").show();
            });
            $("div.divimgmiddle").mouseleave(function(){
                $("p.textmiddlehp").hide();
            });
            $("div.divimgmiddle").mouseenter(function(){
                $("p.textmiddlehp").show();
            });
            $("div.divimgright").mouseleave(function(){
                $("p.textrighthp").hide();
            });
            $("div.divimgright").mouseenter(function(){
                $("p.textrighthp").show();
            });
        });
    </script>

{% endblock %}