{% extends 'baseadmin.html.twig' %}

{% block body %}

    <div id="header" class="jumbotron text-center">
        <h1>Catégorie {{ image.imgCat }} => <img class="image_lang" src="{{ asset('uploads/aleatoire/') }}{{ image.imgTitre }}"></h1>
        <a class="btn btn-success btn-lg" href="{{ path('images_index') }}">
            <i class="glyphicon glyphicon-chevron-left"></i><i class="glyphicon glyphicon-chevron-left"></i>
            Retour à la liste
        </a>
    </div>

    {{ form_start(edit_form) }}
    <div class="container">
        <div class="row">
            <div class="col-md-offset-1 col-md-8">
                <div class="row">
                    <div class="col-md-3">
                        <p class="text-right lib_champs">Catégorie</p>
                    </div>
                    <div class="col-md-9">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                            {{ form_widget(edit_form.imgCat, { 'attr': {'class': 'form-control Libelle', 'placeholder': 'Catégorie' }}) }}
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <p class="text-right lib_champs">Image</p>
                    </div>
                    <div class="col-md-9">
                        {{ form_end(edit_form) }}
                    </div>
                </div>

                <input class="btn btn-success" type="submit" value="Enregistrer" />

            </div>
        </div>
    </div>

