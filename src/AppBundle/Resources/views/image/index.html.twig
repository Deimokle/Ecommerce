{% extends 'baseadmin.html.twig' %}

{% block body %}

    <div id="header" class="jumbotron text-center">
        <h1>Liste des Images</h1>
        <a class="btn btn-success btn-lg" href="{{ path('images_new') }}">
            <i class="glyphicon glyphicon-plus"></i>
            Ajouter une image
        </a>
    </div>

    {% for flashMessage in app.session.flashbag.get('mesModifs') %}
        <div class="alert alert-success">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            {{ flashMessage }}
        </div>
    {% endfor %}

    <div class="container">
        {% for categorie in catimg %}
            <div class="row col-md-12">
                <div class="row col-md-12">
                    <span class="text-center"><h1>&nbsp;</h1></span>
                </div>
                <div class="row col-md-12 txt_aleat_cat">
                    <div class="row col-md-12">
                        <span class="text-center"><h2>{{ categorie.Lib }}</h2></span>
                    </div>
                </div>
            </div>
            <div class="row col-md-12">
                <span class="text-center"><h4>&nbsp;</h4></span>
            </div>
            <div class="row">
                <div class="col-md-offset-1 col-md-10">
                    {% for image in images %}
                        {% if categorie.imgCat == image.imgCat %}
                            <div class="col-md-3 text-center">
                                <div class="row">
                                    <a href="{{ path('images_show', { 'id': image.id }) }}">
                                        <img class="center-block img-responsive imgaleat" src="{{ asset('uploads/aleatoire/')}}{{ image.imgTitre }}">
                                    </a>
                                </div>
                                <div class="row">
                                    <span class="text-center">&nbsp;</span>
                                </div>
                                <div class="row">
                                    <div class="col-md-4">
                                        <a href="{{ path('images_show', { 'id': image.id }) }}">
                                            <img class="center-block img-responsive imgaleat_action" src="{{ asset('bundles/app/img/admin/action_voir.png') }}">
                                        </a>
                                    </div>
                                    <div class="col-md-4">
                                        <a href="{{ path('images_edit', { 'id': image.id }) }}">
                                            <img class="center-block img-responsive imgaleat_action" src="{{ asset('bundles/app/img/admin/action_maj_img.png') }}">
                                        </a>
                                    </div>
                                    <div class="col-md-4">
                                        <a href="{{ path('images_delete', { 'id': image.id }) }}" onclick="return confirm('Confirmez-vous ?')">
                                            <img class="center-block img-responsive imgaleat_action" src="{{ asset('bundles/app/img/admin/action_supp.png') }}">
                                        </a>
                                    </div>
                                </div>
                                <div class="row">
                                    <span class="text-center"><h5>&nbsp;</h5></span>
                                </div>
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}
