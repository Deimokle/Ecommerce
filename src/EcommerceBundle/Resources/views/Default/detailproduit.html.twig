{% extends 'base.html.twig' %}

{% block body %}

    <div class="space"></div>

    <div class="container">
        <div class="row">
            <div class="col-md-3">
{#
                <div class="row">
                    <div class="space"></div>
                </div>
#}
                <div class="row">
                    <span class="text-center">
                        <h2>
                            {#{{ produit.pdlCat }} / {{ produit.pdlType }}{% if produit.pdlItem != null %} / {{ produit.pdlItem }}{% endif %}#}
                            {% if produit.pdlItem != null %}
                                {{ produit.pdlItem }}
                            {% elseif produit.pdlType != null %}
                                {{ produit.pdlType }}
                            {% else %}
                                {{ produit.pdlCat }}
                            {% endif %}
                        </h2>
                    </span>
                </div>
                <div class="row">
                    <tr>
                        <img class="img_bijou_det" src="{{ asset('uploads/produits/') }}{{ produit.pdlIdpdt.pdtPhoto }}">
                    </tr>
                </div>
            </div>
            <div class="col-md-offset-1 col-md-6">
                <div class="row">
                    <span class="text-center">
                        <h1>
                            {{ produit.pdlIdpdt.pdtNom }}
                        </h1>
                    </span>
                </div>
                <div class="row">
                    <span class="text-center">
                        <h2>
                            {{ produit.pdlDesc }}<br/><br/>
                        </h2>
                    </span>
                </div>
                <table class="table table-hover">
                    <tbody>
                        <tr>
                            <th>Ref.</th>
                            <td><h2>{{ produit.pdlIdpdt.pdtRef }}</h2></td>
                        </tr>
                        <tr>
                            <th><h2>TTC</h2></th>
                            <td><h2>{{ produit.pdlIdpdt.pdtPrixUnitTtc|number_format(2, ',', ' ') }} €</h2></td>
                        </tr>
{#
                        <tr>
                            <th>Poids du produit</th>
                            <td>{% if produit.pdlIdpdt.pdtPoids == null %}Non renseigné{% else %}{{ produit.pdlIdpdt.pdtPoids }}{% endif %}</td>
                        </tr>
                        <tr>
                            <th>Dimension du produit</th>
                            <td>{% if produit.pdlIdpdt.pdtDim == null %}Non renseigné{% else %}{{ produit.pdlIdpdt.pdtDim }}{% endif %}</td>
                        </tr>
                        <tr>
                            <th>Poids de l'emballage</th>
                            <td>{% if produit.pdlIdpdt.pdtEmbPoids == null %}Non renseigné{% else %}{{ produit.pdlIdpdt.pdtEmbPoids }}{% endif %}</td>
                        </tr>
                        <tr>
                            <th>Dimension de l'emballage</th>
                            <td>{% if produit.pdlIdpdt.pdtEmbDim == null %}Non renseigné{% else %}{{ produit.pdlIdpdt.pdtEmbDim }}{% endif %}</td>
                        </tr>
#}
                        {% if produit.pdlInfoLib1 != null %}
                            <tr>
                                <th>{{ produit.pdlInfoLib1 }}</th>
                                <td>{{ produit.pdlInfoVal1 }}</td>
                            </tr>
                            {% if produit.pdlInfoLib2 != null %}
                                <tr>
                                    <th>{{ produit.pdlInfoLib2 }}</th>
                                    <td>{{ produit.pdlInfoVal2 }}</td>
                                </tr>
                                {% if produit.pdlInfoLib3 != null %}
                                    <tr>
                                        <th>{{ produit.pdlInfoLib3 }}</th>
                                        <td>{{ produit.pdlInfoVal3 }}</td>
                                    </tr>
                                    {% if produit.pdlInfoLib4 != null %}
                                        <tr>
                                            <th>{{ produit.pdlInfoLib4 }}</th>
                                            <td>{{ produit.pdlInfoVal4 }}</td>
                                        </tr>
                                        {% if produit.pdlInfoLib5 != null %}
                                            <tr>
                                                <th>{{ produit.pdlInfoLib5 }}</th>
                                                <td>{{ produit.pdlInfoVal5 }}</td>
                                            </tr>
                                            {% if produit.pdlInfoLib6 != null %}
                                                <tr>
                                                    <th>{{ produit.pdlInfoLib6 }}</th>
                                                    <td>{{ produit.pdlInfoVal6 }}</td>
                                                </tr>
                                                {% if produit.pdlInfoLib7 != null %}
                                                    <tr>
                                                        <th>{{ produit.pdlInfoLib7 }}</th>
                                                        <td>{{ produit.pdlInfoVal7 }}</td>
                                                    </tr>
                                                    {% if produit.pdlInfoLib58 != null %}
                                                        <tr>
                                                            <th>{{ produit.pdlInfoLib8 }}</th>
                                                            <td>{{ produit.pdlInfoVal8 }}</td>
                                                        </tr>
                                                        {% if produit.pdlInfoLib9 != null %}
                                                            <tr>
                                                                <th>{{ produit.pdlInfoLib9 }}</th>
                                                                <td>{{ produit.pdlInfoVal9 }}</td>
                                                            </tr>
                                                        {% endif %}
                                                    {% endif %}
                                                {% endif %}
                                            {% endif %}
                                        {% endif %}
                                    {% endif %}
                                {% endif %}
                            {% endif %}
                        {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}