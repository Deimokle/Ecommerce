{% extends 'baseadmin.html.twig' %}

{% block body %}
    <div id="header" class="jumbotron text-center">
        <h1>Liste des abonnés aux newsletters</h1>
        <a class="btn btn-success btn-lg" href="{{ path('abontnews_new') }}">
            <i class="glyphicon glyphicon-plus"></i>
            Créer une nouvelle entrée
        </a>
    </div>

    {% for flashMessage in app.session.flashbag.get('mesModifs') %}
        <div class="alert alert-success">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            {{ flashMessage }}
        </div>
    {% endfor %}

    <div class="container">
        <div class="row">
            <div class="col-md-offset-1 col-md-10">
                <table class="table table-hover">
                    <thead>
                    <tr>
                        {#<th>Id</th>#}
                        <th>Etat</th>
                        <th>Adresse email</th>
                        <th>Création</th>
                        <th>Désactivation</th>
                        <th>Langue</th>
                        <th> </th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for abontnews in abontnews %}
                        <tr>
                            {#<td><a href="{{ path('abontnews_show', { 'id': abontnews.id }) }}">{{ abontnews.id }}</a></td>#}
                            <td>{% if abontnews.anlEtat %}Actif{% else %}Inactif{% endif %}</td>
                            <td>{{ abontnews.anlEmail }}</td>
                            <td>{% if abontnews.anlDteActif %}{{ abontnews.anlDteActif|date('d-m-Y') }}{% endif %}</td>
                            <td>{% if abontnews.anlDteDesact and not abontnews.anlEtat %}
                                    {{ abontnews.anlDteDesact|date('d-m-Y') }}
                                    {% else %} &nbsp;
                                {% endif %}</td>
                            <td>{% if abontnews.anlLocale %}{{ abontnews.anlLocale }}{% else %}**{% endif %}</td>
                            <td>
                                <ul class="nopuce">
                                    <li>
                                        <a class="btn btn-primary" id="place-btn" href="{{ path('abontnews_show', { 'id': abontnews.id }) }}">
                                            <i class="glyphicon glyphicon-eye-open"></i>Voir</a>
                                        <a class="btn btn-primary" id="place-btn" href="{{ path('abontnews_edit', { 'id': abontnews.id }) }}">
                                            <i class="glyphicon glyphicon-edit"></i>Modifier</a>
                                        {% if abontnews.anlEmail != 'luciedesaint@gmail.com' %}
                                            <a class="btn btn-primary" id="place-btn" href="{{ path('abontnews_delete', { 'id': abontnews.id }) }}" onclick="return confirm('Confirmez-vous ?')">
                                                <i class="glyphicon glyphicon-trash"></i> Supprimer</a>
                                        {% endif %}
                                    </li>
                                </ul>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

            </div>
        </div>
    </div>

{% endblock %}
