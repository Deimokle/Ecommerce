{% extends 'baseadmin.html.twig' %}

{% block body %}
    <div id="header" class="jumbotron text-center">
        <h1>Liste des adresses</h1>
        <a class="btn btn-success btn-lg" href="{{ path('adresse_index') }}">
            <i class="glyphicon glyphicon-plus"></i>
            Créer une nouvelle entrée
        </a>
    </div>
       <div class="container">
            <div class="row">
                <div class="col-md-offset-1 col-md-8">
                    <table class="table table-hover">
                        <tbody>
            {#<tr>#}
                {#<th>Id</th>#}
                {#<td>{{ adresse.id }}</td>#}
            {#</tr>#}
            <tr>
                <th>Type d'adresse</th>
                <td>{{ adresse.adrType }}</td>
            </tr>
            <tr>
                <th>Nom commanditaire</th>
                <td>{{ adresse.adrNom }}</td>
            </tr>
            <tr>
                <th>Prenom commanditaire</th>
                <td>{{ adresse.adrPrenom }}</td>
            </tr>
            <tr>
                <th>Société commanditaire</th>
                <td>{{ adresse.adrSoc }}</td>
            </tr>
            <tr>
                <th>Email commanditaire</th>
                <td>{{ adresse.adrEmail }}</td>
            </tr>
            <tr>
                <th>Adresse commanditaire</th>
                <td>{{ adresse.adrAdr }}</td>
            </tr>
            <tr>
                <th>Adresse de livraison</th>
                <td>{{ adresse.adrAdr2 }}</td>
            </tr>
            <tr>
                <th>Code postal de livraison</th>
                <td>{{ adresse.adrCp }}</td>
            </tr>
            <tr>
                <th>Ville de livraison</th>
                <td>{{ adresse.adrVille }}</td>
            </tr>
            <tr>
                <th>Pays de livraison</th>
                <td>{{ adresse.adrPays }}</td>
            </tr>
        </tbody>
    </table>

                    <a class="btn btn-success" href="{{ path('adresse_edit', { 'id': adresse.id }) }}">
                        <i class="glyphicon glyphicon-edit"></i>Modifier</a>
{% endblock %}
