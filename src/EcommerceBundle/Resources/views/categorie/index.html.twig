{% extends 'baseadmin.html.twig' %}

{% block body %}

    <div id="header" class="jumbotron text-center">
        <h1>Liste des Catégories</h1>
        <a class="btn btn-success btn-lg" href="{{ path('categorie_new') }}">
            <i class="glyphicon glyphicon-plus"></i>
            Créer une nouvelle entrée
        </a>
    </div>

    {% for flashMessage in app.session.flashbag.get('mesModifs') %}
        <div class="alert alert-success">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            {{ flashMessage }}
        </div>
    {% endfor %}

    <div class="container">
        <div class="row">
            <div class="col-md-offset-2 col-md-8">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            {#<th>Id</th>#}
                            <th>Dénomination</th>
                            <th>Niveau<br />(1 / 2 / 3)</th>
                            <th>En vente ?<br />(0/N)</th>
                            <th>Affichage<br />prix ? (0/N)</th>
                            {#<th>Affichage si<br />pas de stock ?<br />(0/N)</th>#}
                            <th>Affichage<br />si vendu ?<br />(0/N)</th>
                            {#<th>Photo</th>#}
                            <th> </th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for categorie in categories %}
                            <tr>
                                {#<td><a href="{{ path('categorie_show', { 'id': categorie.id }) }}">{{ categorie.id }}</a></td>#}
                                <td>{% if categorie.catNiv == 1 %}<p class="txt_categ_niv1">{{ categorie.catLibAdmin }}</p>{% else %}{{ categorie.catLibAdmin }}{% endif %}</td>
                                <td>{{ categorie.catNiv|number_format(0, ',', ' ') }}</td>
                                <td>{% if categorie.catAvendre %}Oui{% else %}Non{% endif %}</td>
                                <td>{% if categorie.catAffPrix %}Oui{% else %}Non{% endif %}</td>
                                {#<td>{% if categorie.catAffNostock %}Oui{% else %}Non{% endif %}</td>#}
                                <td>{% if categorie.catAffVendu %}Oui{% else %}Non{% endif %}</td>
                                {#<td>{{ categorie.catPhoto }}</td>#}
                                <td>
                                    <ul class="nopuce">
                                        <li>
                                            <a class="btn btn-primary" id="place-btn" href="{{ path('categorie_show', { 'id': categorie.id }) }}">
                                                <i class="glyphicon glyphicon-eye-open"></i>Voir</a>
                                            <a class="btn btn-primary" id="place-btn" href="{{ path('categorie_edit', { 'id': categorie.id }) }}">
                                                <i class="glyphicon glyphicon-edit"></i>Modifier</a>
                                        </li>
                                    </ul>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

