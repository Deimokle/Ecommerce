{% extends 'baseadmin.html.twig' %}

{% block body %}
    <h1>Categorie creation</h1>
    <div id="header" class="jumbotron text-center">
        <h1>Créer une catégorie</h1>
        <a class="btn btn-success btn-lg" href="{{ path('categorie_index') }}">
            <i class="glyphicon glyphicon-chevron-left"></i><i class="glyphicon glyphicon-chevron-left"></i>
            Retour à la liste
        </a>
    </div>

    {{ form_start(form) }}

    <div class="container">
        <div class="row">
            <div class="col-md-offset-1 col-md-8">
                <div class="row">
                    <div class="col-md-3">
                        <p class="text-right lib_champs">Libellé administration</p>
                    </div>
                    <div class="col-md-6">
                        {{ form_widget(form.catLibAdmin, { 'attr': {'class': 'form-control Libelle', 'placeholder': 'Libellé administration' }}) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <p class="text-right lib_champs">Niveau (1/2/3)</p>
                    </div>
                    <div class="col-md-6">
                        {{ form_widget(form.catNiv, { 'attr': {'class': 'form-control Niveau', 'placeholder': 'Niveau' }}) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <p class="text-right lib_champs">A vendre (oui/non)</p>
                    </div>
                    <div class="col-md-6">
                        {{ form_widget(form.catAvendre) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <p class="text-right lib_champs">Affichage prix (oui/non)</p>
                    </div>
                    <div class="col-md-6">
                        {{ form_widget(form.catAffPrix) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <p class="text-right lib_champs">Affichage 'Vendu' (oui/non)</p>
                    </div>
                    <div class="col-md-6">
                        {{ form_widget(form.catAffVendu) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <p class="text-right lib_champs">Taux de TVA associé</p>
                    </div>
                    <div class="col-md-6">
                        {{ form_widget(form.catIdtva) }}
                    </div>
                </div>
{#
                <div class="row">
                    <div class="col-md-3">
                        <p class="text-right lib_champs">Photo illustration</p>
                    </div>
                    <div class="col-md-6">
                        {{ form_widget(form.catPhoto) }}
                    </div>
                </div>
#}

                <div class="row">
                    <div class="col-md-3">
                        <p class="text-right lib_champs">Image associée</p>
                    </div>
                    <div class="col-md-6">
                        {{ form_end(form) }}
                    </div>
                </div>

                <input class="btn btn-success" type="submit" value="Enregistrer" />
            </div>
        </div>
    </div>

