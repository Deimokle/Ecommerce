{% extends 'baseadmin.html.twig' %}

{% block body %}

    <div id="header" class="jumbotron text-center">
        <h1>Catégorie :<br/>{{ categorie.catLibAdmin }}</h1>
        <a class="btn btn-success btn-lg" href="{{ path('tva_index') }}">
            <i class="glyphicon glyphicon-chevron-left"></i>
            Retour à la liste
        </a>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-offset-1 col-md-8">
                <table class="table table-hover">
                    <tbody>
                    {#<tr>#}
                        {#<th>Id</th>#}
                        {#<td>{{ categorie.id }}</td>#}
                    {#</tr>#}
                    <tr>
                        <th>Libellé administration</th>
                        <td>{{ categorie.catLibAdmin }}</td>
                    </tr>
                    <tr>
                        <th>Niveau (1/2/3)</th>
                        <td>{{ categorie.catNiv }}</td>
                    </tr>
                    <tr>
                        <th>A vendre (O/N)</th>
                        <td>{% if categorie.catAvendre %}Oui{% else %}Non{% endif %}</td>
                    </tr>
                    <tr>
                        <th>Affichage du prix (O/N)</th>
                        <td>{% if categorie.catAffPrix %}Oui{% else %}Non{% endif %}</td>
                    </tr>
{#
