                    </tr>
#}
                    <tr>
                        <th>Affichage 'Vendu' (O/N)</th>
                        <td>{% if categorie.catAffVendu %}Oui{% else %}Non{% endif %}</td>
                    </tr>
                    <tr>
                        <th>Taux de TVA associé</th>
                        <td>{{ categorie.catIdtva }}</td>
                    </tr>
                    <tr>
                        <th>Photo illustration</th>
                        {#<td>{{ categorie.catPhoto }}</td>#}
                        <td><img class="image_cat" src="{{ asset('uploads/photosCateg/') }}{{ categorie.catPhoto }}">
                        </td>
                    </tr>
                    </tbody>
                </table>
                <a class="btn btn-success" href="{{ path('categorie_edit', { 'id': categorie.id }) }}">
                    <i class="glyphicon glyphicon-edit"></i>Modifier</a>
              </div>
        </div>
    </div>

