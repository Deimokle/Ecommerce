{% extends 'baseadmin.html.twig' %}

{% block body %}

    <div id="header" class="jumbotron text-center">
        <h1>Création taux de TVA</h1>
        <a class="btn btn-success btn-lg" href="{{ path('tva_index') }}">
            <i class="glyphicon glyphicon-chevron-left"></i><i class="glyphicon glyphicon-chevron-left"></i>
            Retour à la liste
        </a>
    </div>

    {{ form_start(form) }}

    <div class="container">
        <div class="row">
            <div class="col-md-offset-1 col-md-8">
                <div class="row">
                    <div class="col-md-3">
                        <p class="text-right lib_champs">Etat (actif/inactif)</p>
                    </div>
                    <div class="col-md-9">
                        {{ form_widget(form.tvaEtat) }}
                        {#<div class="input-group">#}
                        {#<span class="input-group-addon"><i class="glyphicon glyphicon-ok-sign"></i></span>#}
                        {#{{ form_widget(form.tvaEtat, { 'attr': {'class': 'form-control Actif', 'placeholder': 'Etat' }}) }}#}
                        {#</div>#}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <p class="text-right lib_champs">Libellé correspondant</p>
                    </div>
                    <div class="col-md-9">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                            {{ form_widget(form.tvaLib, { 'attr': {'class': 'form-control Libelle', 'placeholder': 'Libelle de ce code TVA' }}) }}
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <p class="text-right lib_champs">Taux de TVA (%)</p>
                    </div>
                    <div class="col-md-9">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                            {{ form_widget(form.tvaTaux, { 'attr': {'class': 'form-control Taux', 'placeholder': 'Taux de TVA' }}) }}
                        </div>
                    </div>
                </div>


                <input class="btn btn-success" type="submit" value="Enregistrer" />

                {{ form_end(form) }}
            </div>
        </div>
    </div>


